<li class="client {{if model.isActive "active"}}">
	<div class="visible">
        <img src="{{model.image}}" />
        <h1>{{model.name}}</h1>
    </div>
    <div class="actions">
    	<ul>
        	<li class="edit">{{#link-to 'clients.client.edit' model.id}}Edit{{/link-to}}</li>
        	{{#if model.isActive}}
	        	<li class="activate" {{action "setInactive"}}>Deactivate</li>
	        {{else}}
		        <li class="activate" {{action "setActive"}}>Activate</li>
		    {{/if}}
        	<li class="delete" {{action "confirmRemoveClient" model.id}}>Delete</li>
        </ul>
    </div>
    <div class="remove-overlay" id="remove-overlay-{{model.id}}"></div>
	<div class="removeConfirmation" id="remove-confirm-{{model.id}}">
		<h1>Are you sure?</h1>
		<div class="split" {{action "deleteClient"}}>Yes</div>
		<div class="split" {{action "cancelRemove" model.id}}>No</div>
	</div>
</li>